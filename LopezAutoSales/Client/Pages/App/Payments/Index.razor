@page "/app/payments"
@attribute [Authorize(Roles = "Admin")]

<h1 class="text-center">Payments</h1>
@if (Sales == null)
{
    <p class="lead">There's currently no active sales with payments.</p>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        User
                    </th>
                    <th>
                        Vehicles
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Sale sale in Sales)
                {
                    <tr>
                        <td>
                            @sale.Buyer &Aacute; @sale.CoBuyer
                        </td>
                        <td>
                            <a class="btn btn-secondary" href="/app/payments/@sale.Id">
                                @sale.Car.Name
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    public List<Sale> Sales { get; set; }

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }
}
